{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env-backend/*": ["apps/backend/src/environments/*"],
      "@tasks/contracts": ["libs/contracts/src/index.ts"],
      "@tasks/components/tasks": ["libs/components/tasks/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
